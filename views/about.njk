{% extends "layout.njk" %}

{% block head %}
  <title>Sobre - Bruno Mariano</title>
{% endblock %}

{% block content %}

  <main id="wrapper">
    <img src="{{about.avatar_url}}" alt="Bruno">
    <h1>{{about.name}}</h1>
    <h2>{{about.role}}</h2>
    <p>{{about.description}}</p>

  </main>
  
  <section class="social-media links">
    {% for link in about.links%}
      <a href="{{link.url}}" target="_blank">{{link.name}}</a>
    {% endfor %}
  </section>

  {% endblock %}